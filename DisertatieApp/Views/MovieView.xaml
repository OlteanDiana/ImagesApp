<Window x:Class="DisertatieApp.Views.MovieView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Movie viewer"
    WindowState="Maximized"
    WindowStyle="SingleBorderWindow"
    DataContext="{Binding Source={StaticResource Locator}, Path=MovieViewerVM}">
    <DockPanel
        Background="Black">
        <Menu DockPanel.Dock="Top"
              FontWeight="Bold"
              FontSize="14">
            <MenuItem Header="_Save as...">
                <MenuItem Header="_Gif" Command="{Binding SaveAsGifCmd}"/>
            </MenuItem>
        </Menu>
        <Image
            Margin="300,0,300,0"
            UseLayoutRounding="True"
            Stretch="Fill"
            Source="{Binding Path=ImgSource, 
                             Mode=TwoWay, 
                             UpdateSourceTrigger=PropertyChanged}"/>
    </DockPanel>
</Window>
