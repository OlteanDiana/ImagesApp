<Window x:Class="DisertatieApp.Views.MovieView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    WindowState="Maximized"
    WindowStyle="None"
    DataContext="{Binding Source={StaticResource Locator}, Path=MovieViewerVM}">
    <DockPanel
        Background="Black">
        <Menu DockPanel.Dock="Top"
              FontWeight="Bold"
              FontSize="14">
            <MenuItem Header="_Options">
                <MenuItem Header="_Save as Gif" Command="{Binding SaveAsGifCmd}"/>
                <MenuItem Header="_Modify time frame" Command="{Binding ModifyTimeFrameCmd}"/>
                <MenuItem Header="_Close viewer" Command="{Binding CloseCmd}"/>
            </MenuItem>
        </Menu>
        <Image
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Width="500"
            Height="500"
            UseLayoutRounding="True"
            Source="{Binding Path=ImgSource, 
                             Mode=TwoWay, 
                             UpdateSourceTrigger=PropertyChanged}"/>
    </DockPanel>
</Window>
