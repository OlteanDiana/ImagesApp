<UserControl x:Class="DisertatieApp.Custom_controls.CropControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Canvas 
        x:Name="CanvasPanel">
        <Border  
            Height="{Binding ElementName=CanvasPanel, Path=ActualHeight}"
            Width="{Binding ElementName=CanvasPanel, Path=ActualWidth}"
            Background="Transparent">
            <Image 
                Stretch="Fill"
                x:Name="CurrentImage"
                Source="{Binding Path=ImgSource, 
                                 Mode=TwoWay, 
                                 UpdateSourceTrigger=PropertyChanged}"/>
        </Border>
    </Canvas>
</UserControl>
