<UserControl 
    x:Class="DisertatieApp.Custom_controls.ImageButton"
    x:Name="navigationControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Button 
        Margin="10,10,10,10"
        Command="{Binding ElementName=navigationControl, 
                          Path=ButtonCommand, 
                          Mode=TwoWay, 
                          UpdateSourceTrigger=PropertyChanged}">
        <Image Source="{Binding ElementName=navigationControl,
                                Path=ContentImagePath,
                                Mode=TwoWay, 
                                UpdateSourceTrigger=PropertyChanged}">
            <Image.Style>
                <Style TargetType="Image">
                    <Style.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="1" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Image.Style>
        </Image>
    </Button>
</UserControl>
