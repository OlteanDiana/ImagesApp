<UserControl 
    x:Class="DisertatieApp.Custom_controls.CropImage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Name="imgControl">
    <Image 
        x:Name="currentImage"
        Stretch="Uniform"
        MaxWidth="{Binding ActualWidth, ElementName=imgControl}"
        MaxHeight="{Binding ActualHeight, ElementName=imgControl}"
        Source="{Binding Path=ImgSource, 
                            Mode=TwoWay, 
                            UpdateSourceTrigger=PropertyChanged}"/>
</UserControl>
